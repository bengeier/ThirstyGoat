<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Lock.Theme">
        <item name="Auth0.HeaderLogo">@drawable/goat_logo</item>
        <item name="Auth0.HeaderTitle">@string/login_title</item>
        <item name="Auth0.HeaderTitleColor">@color/primary_text</item>
        <item name="Auth0.HeaderBackground">@color/accent</item>
        <item name="Auth0.PrimaryColor">@color/primary</item>
        <item name="Auth0.DarkPrimaryColor">@color/primary_dark</item>
    </style>

</resources>
